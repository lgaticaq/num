<%= form_for(@resource) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nombre Completo' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'E-mail' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :dni, 'RUT' %>
    <%= f.text_field :dni, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :number, 'NÃºmero de cuenta' %>
    <%= f.text_field :number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :account_type_id, 'Tipo de cuenta' %>
    <%= collection_select :form_account_user, :account_type_id, AccountType.all, :id, :name, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :bank_id, 'Banco' %>
    <%= collection_select :form_account_user, :bank_id, Bank.all, :id, :name, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :username, 'URL personalizada (opcional)', id: 'url_example' %>
    <%= f.text_field :username, id: 'username_text_field', class: 'form-control' %>
  </div>

  <div>
    <button class="btn btn-primary center-block">Crear mi num</button>
  </div>

  <script>
  var url_example = document.getElementById('url_example');
  var tentative_url = document.getElementById('username_text_field');
  tentative_url.onkeyup = function(){
    url = tentative_url.value.toLowerCase()
    if(url=='') {
      url_example.innerHTML = 'URL personalizada (opcional)'
    } else {
      url_example.innerHTML = "Num.cl/" + url;
    }
  }
  </script>
<% end %>
